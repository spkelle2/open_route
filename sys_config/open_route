upstream open_route_server {
    server unix:/home/ubuntu/open_route/open_route/open_route.sock fail_timeout=0;
}

server {
    listen   80;
    server_name open-route.website www.open-route.website;

    client_max_body_size 4G;

    access_log /home/ubuntu/open_route/logs/nginx-access.log;
    error_log /home/ubuntu/open_route/logs/nginx-error.log;

    location /static/ {
        alias   /home/ubuntu/open_route/open_route/static/;
    }

    location /media/ {
        alias   /home/ubuntu/open_route/open_route/media/;
    }

    location / {
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header Host $http_host;
        proxy_redirect off;
        if (!-f $request_filename) {
            proxy_pass http://open_route_server;
            break;
	}
    }
}
